<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C6C6C"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".games.SchiffeVersenken"
    tools:showIn="@layout/activity_schiffe_versenken">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageView"
        android:layout_marginBottom="0dp"
        android:paddingBottom="10dp"
        android:text="Befindet sich noch in der Entwicklung"
        android:textAlignment="center"
        android:textColor="@color/actionBarTitle"
        android:textSize="25sp"></TextView>

    <android.support.v7.widget.CardView
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="30dp">
        <ImageView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/schiffe_versenken"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>