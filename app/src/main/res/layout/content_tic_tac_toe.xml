<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    tools:context=".games.TicTacToe.TicTacToe"
    tools:showIn="@layout/activity_tic_tac_toe">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/tictactoe_btn_size"
            android:layout_height="@dimen/tictactoe_btn_size"
            android:textColor="@color/transparent">

            <ImageView
                android:id="@+id/field_1_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/tictactoe_btn_size"
            android:layout_height="@dimen/tictactoe_btn_size"
            android:textColor="@color/transparent">

            <ImageView
                android:id="@+id/field_1_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/tictactoe_btn_size"
            android:layout_height="@dimen/tictactoe_btn_size"
            android:textColor="@color/transparent">

            <ImageView
                android:id="@+id/field_1_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/tictactoe_btn_size"
            android:layout_height="@dimen/tictactoe_btn_size"
            android:textColor="@color/transparent">

            <ImageView
                android:id="@+id/field_2_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/tictactoe_btn_size"
            android:layout_height="@dimen/tictactoe_btn_size"
            android:textColor="@color/transparent">

            <ImageView
                android:id="@+id/field_2_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/tictactoe_btn_size"
            android:layout_height="@dimen/tictactoe_btn_size"
            android:textColor="@color/transparent">

            <ImageView
                android:id="@+id/field_2_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/tictactoe_btn_size"
            android:layout_height="@dimen/tictactoe_btn_size"
            android:textColor="@color/transparent">

            <ImageView
                android:id="@+id/field_3_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/tictactoe_btn_size"
            android:layout_height="@dimen/tictactoe_btn_size"
            android:textColor="@color/transparent">

            <ImageView
                android:id="@+id/field_3_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/tictactoe_btn_size"
            android:layout_height="@dimen/tictactoe_btn_size"
            android:textColor="@color/transparent">

            <ImageView
                android:id="@+id/field_3_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </android.support.v7.widget.CardView>

    </GridLayout>

</RelativeLayout>